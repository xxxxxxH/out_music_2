<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Path: "
            android:padding="3dp"
            android:textStyle="bold"
            android:textColor="@color/txt_title"
            android:id="@+id/text_path"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/txt_sub"
            android:paddingRight="3dp"
            android:id="@+id/text_path_value" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size : "
            android:padding="3dp"
            android:textStyle="bold"
            android:textColor="@color/txt_title"
            android:id="@+id/text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/txt_sub"
            android:paddingRight="3dp"
            android:id="@+id/text_video_size_value" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration: "
            android:padding="3dp"
            android:textStyle="bold"
            android:textColor="@color/txt_title"
            android:id="@+id/text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/txt_sub"
            android:paddingRight="3dp"
            android:id="@+id/text_duration" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resolution: "
            android:padding="3dp"
            android:textStyle="bold"
            android:textColor="@color/txt_title"
            android:id="@+id/text_resolution" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/txt_sub"
            android:paddingRight="3dp"
            android:id="@+id/text_resolution_value" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:padding="3dp"
            android:textStyle="bold"
            android:textColor="@color/txt_title"
            android:id="@+id/text_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/txt_sub"
            android:paddingRight="3dp"
            android:id="@+id/text_date_value" />
    </LinearLayout>

</LinearLayout>